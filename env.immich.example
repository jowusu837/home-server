# Immich Environment Configuration
# Copy this file to .env.immich and update the password
# cp env.immich.example .env.immich
#
# Documentation: https://immich.app/docs/install/environment-variables

# Database Configuration - CHANGE THE PASSWORD!
DB_PASSWORD=changeme_use_strong_password
DB_USERNAME=postgres
DB_DATABASE_NAME=immich
DB_HOSTNAME=immich-database

# PostgreSQL container variables (must match above)
POSTGRES_PASSWORD=changeme_use_strong_password
POSTGRES_USER=postgres
POSTGRES_DB=immich

# Redis Configuration
REDIS_HOSTNAME=immich-redis

# Upload/Storage Location
UPLOAD_LOCATION=/mnt/storage/immich/upload

# Immich Version (use 'release' for stable)
IMMICH_VERSION=release

# Machine Learning
IMMICH_MACHINE_LEARNING_URL=http://immich-machine-learning:3003
