# Vaultwarden Configuration
# Copy this file to .env.vaultwarden and update the values

# Admin panel token (supports Argon2 hashed tokens with $ characters)
# Generate with: echo -n "your-password" | argon2 "$(openssl rand -base64 32)" -e -id -k 65536 -t 3 -p 4
# Note: No need to escape $ characters in this file
ADMIN_TOKEN=CHANGE_ME_GENERATE_SECURE_TOKEN

# Your Vaultwarden domain (used for email links, WebAuthn, etc.)
# Must match the domain configured in Caddy for HTTPS to work properly
DOMAIN=https://vault.homeserver.local

# Set to false after creating your account(s)
SIGNUPS_ALLOWED=true

TZ=${TZ:-Africa/Accra}
INVITATIONS_ALLOWED=true
SHOW_PASSWORD_HINT=false
LOG_LEVEL=info

# ===========================================
# SMTP Configuration for Email (Invites, 2FA, etc.)
# ===========================================

# SMTP server hostname
# Examples: smtp.gmail.com, smtp.mailgun.org, smtp.sendgrid.net, mail.yourdomain.com
SMTP_HOST=smtp.example.com

# Email address that emails will be sent from
SMTP_FROM=vaultwarden@yourdomain.com

# Optional: Display name for the sender
SMTP_FROM_NAME=Vaultwarden

# SMTP port
# Common options: 587 (STARTTLS), 465 (implicit TLS/SSL), 25 (plain/no encryption)
SMTP_PORT=587

# Security mode: "starttls", "force_tls", or "off"
# - starttls: Upgrade to TLS after connecting (port 587, recommended)
# - force_tls: Implicit TLS from start (port 465)
# - off: No encryption (not recommended)
SMTP_SECURITY=starttls

# SMTP authentication credentials
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Optional: Timeout in seconds (default 15)
# SMTP_TIMEOUT=15

# Optional: Accept invalid certificates (not recommended for production)
# SMTP_ACCEPT_INVALID_CERTS=false
# SMTP_ACCEPT_INVALID_HOSTNAMES=false
